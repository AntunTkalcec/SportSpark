@inherits EventsListBase

@foreach (var ev in Events)
{
    <div class="col mb-5">
        <div class="card h-100 hvr-grow border-1 shadow" style="max-width: 450px;" @onclick="() => GoToEventDetails(ev.Id)">
            <img src="@GetImg(ev)" style="max-width: 450px; max-height: 250px;" class="card-img-top" alt="@ev.Title">
            <div class="card-body">
                <h5 class="card-title">@ev.Title</h5>
                <p class="card-text text-break">@ev.Description</p>
            </div>
            <div class="card-footer">
                @if (ev.Time is null)
                {
                    <small class="text-muted">
                        Date unspecified
                    </small>
                }
                else
                {
                    <small class="text-muted">
                        @ev.Time
                    </small>
                }
            </div>
        </div>
    </div>
}

