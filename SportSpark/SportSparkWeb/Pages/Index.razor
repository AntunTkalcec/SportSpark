@page "/"
@attribute [Authorize]
@inherits IndexBase

<PageTitle>Home</PageTitle>

@if (Events is null && ErrorMsg is null)
{
    <h3>Loading...</h3>
}
else if (ErrorMsg is not null)
{
    <h3 class="text-danger">@ErrorMsg</h3>
}
else if (Events?.Count == 0)
{
    <h3>There are no events near you</h3>
}
else
{
    <div class="row">
        <div class="col-6">
            <h3 class="fw-bold">Events near you</h3>
        </div>
        <div class="col-6 text-end">
            <a href="seeMore" class="text-secondary">See more</a>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-6 g-4">
        <EventsList Events="Events"/>
    </div>

    <div class="row mt-5">
        <div class="col-6">
            <h3 class="fw-bold">Friends' events</h3>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-6 g-4">
        <FriendEventsList Events="FriendEvents"/>
    </div>
}
