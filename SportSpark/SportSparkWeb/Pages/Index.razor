@page "/"
@attribute [Authorize]
@inherits IndexBase

<PageTitle>Home</PageTitle>

@if (Events is null && ErrorMsg is null)
{
    <h3>Loading...</h3>
}
else if (ErrorMsg is not null)
{
    <h3 class="text-danger">@ErrorMsg</h3>
}
else if (Events?.Count == 0)
{
    <h3>There are no events near you</h3>
}
else
{
    <div class="row mb-3">
        <div class="col-9">
            <h3 class="fw-bold text-secondary">Events near you</h3>
        </div>
        <div class="col-3 text-end">
            <a href="seeMore" class="text-muted hvr-grow text-decoration-none fst-italic">See more</a>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
        <EventsList Events="Events"/>
    </div>
    <hr />
    <div class="row mb-3">
        <div class="col-12">
            <h3 class="fw-bold text-secondary">Friends' events</h3>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
        <EventsList Events="FriendEvents"/>
    </div>
}
