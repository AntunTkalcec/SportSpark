<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:SportSpark.ViewModels"
             x:Class="SportSpark.Views.RegisterView"
             x:DataType="viewModels:RegisterViewModel"
             xmlns:fonts="clr-namespace:SportSpark.Models.Font"
             Shell.NavBarIsVisible="False">
    <ContentPage.Resources>
        <Style x:Key="EntryBorderStyle" TargetType="Border">
            <Setter Property="BackgroundColor" Value="{StaticResource BackgroundLight}"/>
            <Setter Property="StrokeThickness" Value="1"/>
            <Setter Property="Stroke" Value="{StaticResource LightThemeEntry}"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
    </ContentPage.Resources>
    <ScrollView>
        <VerticalStackLayout Spacing="20" Margin="15, 0">
            <Label Text="Welcome to SportSpark" TextColor="Black" Margin="0, 35, 0, 0" HorizontalOptions="CenterAndExpand"
                   FontSize="36" FontAttributes="Bold" HorizontalTextAlignment="Center" 
                   Shadow="{StaticResource DefaultShadow}"/>
            <Label Text="Enter your information to register" TextColor="Black" FontSize="14" HorizontalOptions="CenterAndExpand"
                   HorizontalTextAlignment="Center" Shadow="{StaticResource DefaultShadow}" Margin="0, 0, 0, 15"/>

            <VerticalStackLayout Spacing="5">
                <Label Text="First name" TextColor="Black" Margin="15, 0, 0, 0" FontAttributes="Bold"/>
                <Border Style="{StaticResource EntryBorderStyle}" x:Name="firstNameBorder">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Entry x:Name="firstName" Placeholder="Enter first name..." TextColor="Black" PlaceholderColor="#B4B4B4"
                           Completed="FirstName_Completed" Unfocused="FirstName_Unfocused" Text="{Binding FirstName}">
                        <Entry.Keyboard>
                            <Keyboard x:FactoryMethod="Create">
                                <x:Arguments>
                                    <KeyboardFlags>CapitalizeWord</KeyboardFlags>
                                </x:Arguments>
                            </Keyboard>
                        </Entry.Keyboard>
                    </Entry>
                </Border>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="5">
                <Label Text="Last name" TextColor="Black" Margin="15, 0, 0, 0" FontAttributes="Bold"/>
                <Border Style="{StaticResource EntryBorderStyle}" x:Name="lastNameBorder">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Entry x:Name="lastName" Placeholder="Enter last name..." TextColor="Black" PlaceholderColor="#B4B4B4"
                           Completed="LastName_Completed" Unfocused="LastName_Unfocused" Text="{Binding LastName}">
                        <Entry.Keyboard>
                            <Keyboard x:FactoryMethod="Create">
                                <x:Arguments>
                                    <KeyboardFlags>CapitalizeWord</KeyboardFlags>
                                </x:Arguments>
                            </Keyboard>
                        </Entry.Keyboard>
                    </Entry>
                </Border>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="5">
                <Label Text="Username" TextColor="Black" Margin="15, 0, 0, 0" FontAttributes="Bold"/>
                <Border Style="{StaticResource EntryBorderStyle}" x:Name="usernameBorder">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Entry x:Name="username" Placeholder="Enter username..." TextColor="Black" PlaceholderColor="#B4B4B4"
                           Completed="Username_Completed" Unfocused="Username_Unfocused" Text="{Binding Username}"/>
                </Border>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="5">
                <Label Text="Email" TextColor="Black" Margin="15, 0, 0, 0" FontAttributes="Bold"/>
                <Border Style="{StaticResource EntryBorderStyle}" x:Name="emailBorder">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Entry x:Name="email" Placeholder="Enter email..." TextColor="Black" PlaceholderColor="#B4B4B4"
                           Completed="Email_Completed" Unfocused="Email_Unfocused" Text="{Binding Email}"/>
                </Border>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="5">
                <Label Text="Password" TextColor="Black" Margin="15, 0, 0, 0" FontAttributes="Bold"/>
                <Border Style="{StaticResource EntryBorderStyle}" x:Name="passwordBorder">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Grid>
                        <Entry x:Name="password" Placeholder="Enter password..." TextColor="Black" PlaceholderColor="#B4B4B4" 
                               IsPassword="{Binding IsPassword}" Completed="Password_Completed" 
                               Unfocused="Password_Unfocused" Text="{Binding Password}"/>
                        <Label Text="{Binding PasswordVisibilityCode}" TextColor="Black" HorizontalOptions="EndAndExpand" 
                               VerticalOptions="CenterAndExpand" FontFamily="faSolid" FontSize="24">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ChangePasswordVisibilityIconCommand}"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </Grid>
                </Border>
                <Label Text="Need 6-20 characters, 1 uppercase letter, 1 lowercase letter and 1 number." TextColor="Red"
                       IsVisible="{Binding PasswordErrorVisible}"/>
            </VerticalStackLayout>

            <Button Text="Register" FontAttributes="Bold" FontSize="28" 
                    BackgroundColor="{StaticResource SportSparkDarkBlue}" Margin="0, 15, 0, 25"
                    TextColor="White" Shadow="{StaticResource DefaultShadow}"
                    CornerRadius="30" x:Name="RegisterBtn" Command="{Binding RegisterCommand}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>